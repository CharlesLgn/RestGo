<Page
    x:Class="RestMan.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestMan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="0,0,0,0">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="First.(Grid.Row)" Value="0" />
                        <Setter Target="First.(Grid.Column)" Value="0" />
                        <Setter Target="Second.(Grid.Row)" Value="0" />
                        <Setter Target="Second.(Grid.Column)" Value="1" />
                        <Setter Target="Third.(Grid.Row)" Value="0" />
                        <Setter Target="Third.(Grid.Column)" Value="2" />
                        <Setter Target="Fourth.(Grid.Row)" Value="1"/>
                        <Setter Target="Fourth.(Grid.Column)" Value="0"/>
                        <Setter Target="Fifth.(Grid.Row)" Value="1"/>
                        <Setter Target="Fifth.(Grid.Column)" Value="1"/>

                        <Setter Target="First.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="Second.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="Third.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="Fourth.(Grid.ColumnSpan)" Value="1" />
                        <Setter Target="Fourth.(Grid.ColumnSpan)" Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="First.(Grid.Row)" Value="0" />
                        <Setter Target="First.(Grid.Column)" Value="0" />
                        <Setter Target="Second.(Grid.Row)" Value="1" />
                        <Setter Target="Second.(Grid.Column)" Value="0" />
                        <Setter Target="Third.(Grid.Row)" Value="2" />
                        <Setter Target="Third.(Grid.Column)" Value="0" />
                        <Setter Target="Fourth.(Grid.Row)" Value="3"/>
                        <Setter Target="Fourth.(Grid.Column)" Value="0"/>
                        <Setter Target="Fifth.(Grid.Row)" Value="4"/>
                        <Setter Target="Fifth.(Grid.Column)" Value="0"/>

                        <Setter Target="First.(Grid.ColumnSpan)" Value="3" />
                        <Setter Target="Second.(Grid.ColumnSpan)" Value="3" />
                        <Setter Target="Third.(Grid.ColumnSpan)" Value="3" />
                        <Setter Target="Fourth.(Grid.ColumnSpan)" Value="3" />
                        <Setter Target="Fifth.(Grid.ColumnSpan)" Value="3" />
                    
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>




        <ScrollViewer Grid.Row="1" FontFamily="Segoe UI">
            <Grid Margin="0,0,0,0" Padding="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:ConnectionId='5' Name="First" Margin="0,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:ConnectionId='13' Name="Methode" Width="150"></ComboBox>
                </StackPanel>
                <StackPanel x:ConnectionId='6' Name="Second" Margin="0,10,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <TextBox x:ConnectionId='12' Name="Query" Width="1300" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel x:ConnectionId='7' Name="Third" Margin="0,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button x:ConnectionId='11' Name="Lancer" Height="32" Width="150" Content="Envoyer" HorizontalAlignment="Left"/>
                </StackPanel>
                <StackPanel x:ConnectionId='8' Name="Fourth" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,10">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Corps de la requête</TextBlock>
                </StackPanel>
                <StackPanel x:ConnectionId='9' Name="Fifth" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10">
                    <RichEditBox x:ConnectionId='10' Name="Body" Height="168" Width="1300" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

